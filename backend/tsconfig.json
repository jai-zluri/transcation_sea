

{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "strict": true,
   "outDir": "./dist",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["jest", "node"], // Add jest here
    "typeRoots": ["./node_modules/@types"]
  },
  "include": [
    "src/**/*.ts",
    "tests/**/*" // Ensure your test files are included
  ]
}
